<div class="card">
    <div class="card-header bg-dark">
        <div class="card-title text-white">
            <i class="far fa-image"></i> Upload and image
        </div>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile"> Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title for image" required>
            </div>
            <div class="form-group">
                <textarea name="description" cols="4" class="form-control" placeholder="Description for image" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                   <i class="fa fa-upload"></i> Upload Image
                </button>
            </div>
        </form>
    </div>
</div>